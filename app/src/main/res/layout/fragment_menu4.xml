<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 등록된 기기 텍스트 -->

    <!-- 기기 번호 -->

    <!-- 기기 인터넷 연결 버튼 -->

    <!-- 기기 등록 취소 버튼 -->

    <!-- 기기 초기화 버튼 -->

    <!-- 기기 변경 버튼 -->

    <TextView
        android:id="@+id/registered_device_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="등록된 기기"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/device_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/registered_device_label"
        android:layout_marginTop="30dp"
        android:text="50312402010"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registered_device_label" />

    <Button
        android:id="@+id/btn_connect_internet"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/device_id"
        android:layout_marginTop="70dp"
        android:text="기기 인터넷 연결"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/device_id" />

    <Button
        android:id="@+id/btn_cancel_registration"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_connect_internet"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:text="기기 등록 취소"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_connect_internet" />

    <Button
        android:id="@+id/btn_reset_device"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_cancel_registration"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:text="기기 초기화"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_cancel_registration" />

    <Button
        android:id="@+id/btn_change_device"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@id/btn_reset_device"
        android:layout_marginStart="16dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="16dp"
        android:text="기기 변경"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_reset_device" />

</androidx.constraintlayout.widget.ConstraintLayout>
